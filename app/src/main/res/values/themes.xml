<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculationPractice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F2C34</item>
        <item name="colorPrimaryVariant">#1F2C34</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyCustomTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F2C34</item>
        <item name="colorPrimaryVariant">#1F2C34</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/baseline_help_24</item>
    </style>

    <style name="themeForSplashActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F2C34</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="colorPrimaryVariant">#1F2C34</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonStyle">
        <item name="android:height">85dp</item>
        <item name="android:width">105dp</item>
        <item name="backgroundTint">#E1F5E3</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">1dp</item>
        <item name="minHeight">0dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_marginBottom">-3dp</item>
    </style>
    <style name="ButtonStyleException">
        <item name="android:height">100dp</item>
        <item name="android:width">242dp</item>
        <item name="backgroundTint">#62DD67</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>